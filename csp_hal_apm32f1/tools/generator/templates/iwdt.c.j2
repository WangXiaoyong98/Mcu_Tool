{%- extends "csp-file-base.c.j2" %}

{%- block includes %}
#include "csp/iwdt.h"
{%- endblock %}

{%- block function_body %}
void csp_iwdt_init(void)
{
    IWDT_Enable();
    IWDT_EnableWriteAccess();

    IWDT_ConfigDivider({{ CSP.project|iwdt_prescaler() }});
    IWDT_ConfigReload({{ CSP.project|iwdt_reload_t(4095) }}U);

    while (IWDT_ReadStatusFlag(IWDT_FLAG_PSCU | IWDT_FLAG_CNTU) == RESET)
    {
    }

    IWDT_Refresh();
}
{%- endblock %}
