{%- extends "csp-file-base.main.c.j2" %}

{%- macro init_func(name, modules) %}
    {%- if name in modules %}
    csp_{{ name|lower() }}_init();
    {%- endif %}
{%- endmacro %}

{%- set modules = CSP.project.modules|sort %}

{%- block includes %}
#include "apm32f10x.h"
{%- for module in modules %}
#include "csp/{{ module|lower }}.h"
{%- endfor %}
{%- endblock includes %}

{%- block main_init_body %}
    {{- init_func("RCM", modules) }}
    {{- init_func("SYS", modules) }}
    {{- init_func("GPIO", modules) }}
    {{- init_func("USART1", modules) }}
    {{- init_func("USART2", modules) }}
    {{- init_func("USART3", modules) }}
    {{- init_func("UART4", modules) }}
    {{- init_func("UART5", modules) }}
    {{- init_func("CRC", modules) }}
    {{- init_func("IWDT", modules) }}
    {{- init_func("WWDT", modules) }}
{##}
{%- endblock main_init_body %}

