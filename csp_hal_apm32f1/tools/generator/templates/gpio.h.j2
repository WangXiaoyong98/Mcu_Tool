{%- extends "csp-file-base.h.j2" %}

{%- set used_channels = CSP.project|gpio_used_channels %}

{%- block includes %}
#include "apm32f10x.h"
#include "apm32f10x_eint.h"
#include "apm32f10x_gpio.h"
#include "apm32f10x_misc.h"
#include "apm32f10x_rcm.h"
{%- endblock %}

{%- block define %}
{%- for channel in used_channels %}
    {%- set alias = CSP.project|gpio_channel_alias(channel) %}
    {%- if alias %}

#define {{ alias }}_PORT {{ port }} /*!< Alias for {{ port }} */
#define {{ alias }}_PIN {{ pin }} /*!< Alias for {{ pin }} */
    {%- endif %}
{%- endfor %}
{%- endblock %}

{%- block functions_prototypes %}
/**
 * @brief configure gpio
 */
void csp_gpio_init(void);
{%- endblock %}
