{%- extends "csp-file-base.c.j2" %}

{%- block includes %}
#include "csp/sys.h"
{%- endblock %}

{%- block function_body %}
void csp_sys_init(void)
{
{%- set sys_debug = CSP.project|sys_ctrl_debug_t %}
{%- set clocks = CSP.project|sys_clocks() %}

{%- if clocks|length() > 0 %}
    RCM_EnableAPB2PeriphClock({{ clocks|join(" | ") }});
{#  #}
{%- endif %}
    GPIO_ConfigPinRemap({{ CSP.project|sys_debug() }});
}
{%- endblock %}
