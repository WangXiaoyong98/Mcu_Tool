{%- extends "csp-file-base.h.j2" %}

{%- block includes %}
#include "apm32f10x.h"
#include "apm32f10x_eint.h"
#include "apm32f10x_gpio.h"
#include "apm32f10x_misc.h"
#include "apm32f10x_usart.h"
#include "apm32f10x_rcm.h"
{%- endblock %}

{%- set module = CSP.module %}
{%- set name = CSP.module|lower() %}

{%- block functions_prototypes %}
/**
 * @brief configure {{ module }}
 */
void csp_{{ name }}_init(void);

/**
 * @brief send {{ module }} data sequence.
 * @param[in] *buffer buffer pointer.
 * @param[in] length buffer size.
 * @return int32_t
 */
int32_t csp_{{ name }}_write(const void *buffer, uint32_t length);

/**
 * @brief receive {{ module }} data sequence.
 * @param[out] *buffer buffer pointer.
 * @param[in] length buffer size.
 * @return int32_t
 */
int32_t csp_{{ name }}_read(void *buffer, uint32_t length);
{%- endblock %}
